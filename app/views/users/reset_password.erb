<% if @user == nil %>
	Cannot find user.
<% elsif @user.password_token_timestamp > (Time.now - 3600) %>
	Hello <%= @user.email %>, please enter your new password.

	<form action="/users/password_updated" method="post">
		Password: <input name="password" type="password">
		Confirm: <input name="password_confirmation" type="password">
		<input type="hidden" name="token" value="<%= @token %>">
		<input type="submit" value="Confirm">
	</form>
<% else %>
	Your link has expired.
<% end %>